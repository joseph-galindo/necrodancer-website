doctype
html(lang="en", xmlns:ng="http://angularjs.org", id="ng-app", ng-app="necro", ng-controller="NecroController")

    head
        //- set up meta tags
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(charset="utf-8")

        title.
            #{page.title}

        meta(name="description", content="#{page.description}")
        meta(name="keywords", content="#{page.keywords}")

        meta(name="format-detection", content="telephone=no")
        meta(id="viewport", name="viewport", content="target-densitydpi=device-dpi, width=device-width, user-scalable=0, minimal-ui")

        //- set up link tags

        link(rel="stylesheet" type="text/css" href="css/styles.css")
        link(rel="icon", type="image/x-icon", href="/favicon.ico")

        //- set up script tags

    body(ontouchstart="", class="section--#{page.section} page--#{fileName}")

        main.content--main

            //-include /partials/header--global.jade

            article.content--article
                block content

                //-include /partials/footer--global.jade


